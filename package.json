{
    "name": "typescript-template",
    "version": "1.0.0",
    "license": "MIT",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "scripts": {
        "start": "npm run build && node -r ./tsconfig-paths-bootstrap.js dist/index.js",
        "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
        "pre-build": "rimraf ./dist",
        "build": "yarn run pre-build && tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "dev": "ts-node -r tsconfig-paths/register src/index.ts",
        "lint": "eslint --max-warnings=0 '{src,__tests__}/**/*.ts'",
        "lint:fix": "eslint --fix '{src,__tests__}/**/*.ts'",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register $(yarn bin jest) --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "release": "standard-version && yarn post-release",
        "release:major": "standard-version -- --release-as major && yarn post-release",
        "release:minor": "standard-version -- --release-as minor && yarn post-release",
        "release:patch": "standard-version -- --release-as patch && yarn post-release",
        "release:version": "standard-version -- --release-as && yarn post-release",
        "post-release": "git push --follow-tags origin master",
        "prepare": "husky install",
        "pre-commit": "yarn build && yarn lint-staged",
        "prepare-commit-msg": "devmoji -e",
        "commit-msg": "npx --no-install commitlint --edit",
        "pre-push": "yarn test",
        "commit": "cz"
    },
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.1",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "devmoji": "^2.3.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.1",
        "eslint-plugin-prettier": "^3.4.1",
        "eslint-plugin-security": "^1.4.0",
        "git-branch-is": "^4.0.0",
        "git-format-staged": "^2.1.2",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2",
        "standard-version": "^9.3.1",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "tsconfig-paths": "^3.10.1",
        "typedi": "^0.10.0"
    }
}
